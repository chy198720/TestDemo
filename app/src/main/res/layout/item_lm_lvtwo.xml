<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_lvtwo"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_lvtwo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_lvtwo"
        android:textColor="#313131" />

    <TextView
        android:id="@+id/tv_lvtwo_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_lvtwo_title"
        android:layout_below="@id/tv_lvtwo_title"
        android:layout_marginTop="5dp"
        android:textColor="#313131"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_lvtwo_likescount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="60dp"
        android:textColor="#313131"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_alignTop="@id/tv_lvtwo_likescount"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tv_lvtwo_likescount"
        android:src="@mipmap/ic_heart_normal" />


</RelativeLayout>