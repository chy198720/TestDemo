<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d4d3d3"
                android:orientation="vertical">

    <com.lanou3g.testdemo.task.PullToZoomListView
        android:id="@+id/lv_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.lanou3g.testdemo.task.PullToZoomListView>

    <RelativeLayout
        android:id="@+id/rl_selection_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_selection_return"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/return1"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/tv_item_selection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"/>
    </RelativeLayout>


</RelativeLayout>